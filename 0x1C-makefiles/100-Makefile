CC = gcc
COMPILER = $(CC)
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
.PHONY: all clean oclean fclean re

all : m.h $(OBJ)
	$(COMPILER) -Wall -Werror -Wextra -pedantic $(OBJ) -o $(NAME)

clean :
	rm -f *~ $(NAME)

oclean : $(OBJ)
	rm -f $(OBJ)

fclean : clean oclean

re : oclean all

main.o:
	$(COMPILER) -c -o main.o main.c

school.o:
	$(COMPILER) -c -o school.o school.c
