CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean: $(OBJ)
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

$(OBJ): $(SRC) m.h
	$(CC) $(CFLAGS) -c $(SRC)

.PHONY: all clean oclean fclean re
